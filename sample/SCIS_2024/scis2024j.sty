\def\samethanks#1{$^{\@fnsymbol{#1}}$}

\def\@abstract{}
\def\abstract{\@ifstar{\jabstract}{\eabstract}}
\def\jabstract#1{\def\@abstract{\noindent \hbox to 0.5\parindent{}{\bf あらまし }#1}}
\def\eabstract#1{\def\@abstract{\noindent \hbox to 0.5\parindent{}{\bf Abstract--- }#1}}

\def\@keywords{}
\def\keywords{\@ifstar{\jkeywords}{\ekeywords}}
\def\jkeywords#1{\def\@keywords{\noindent \hbox to 0.5\parindent{}{\bf キーワード }#1}}
\def\ekeywords#1{\def\@keywords{\noindent \hbox to 0.5\parindent{}{\bf Keywords: }#1}}

% Affiliation
\long\def\@makefntext#1{%
  \everypar={\hangindent=1zw \hangafter=1 \@nobreakfalse\@minipagefalse}%
  \parindent 1zw\noindent%
  \hbox to 0.5zw{\hss$^{\@thefnmark}$} \strut #1\strut
}

% Section, subsection
\def\section{\@startsection{section}{1}{\z@}{2.5ex plus 1ex minus .2ex}
  {1.5ex plus .2ex}{\large\bf}}
\def\subsection{\@startsection{subsection}{2}{\z@}{2.25ex plus 1ex minus .2ex}
  {0.8ex plus .2ex}{\normalsize\bf}}
\def\subsubsection{\@startsection{subsubsection}{3}{\z@}{2.0ex plus 1ex minus .2ex}
  {0.5ex plus .2ex}{\normalsize\bf}}
\def\paragraph{\@startsection{paragraph}{4}{\z@}{1.75ex plus 1ex minus .2ex}
  {-1em}{\normalsize\bf}}
\def\subparagraph{\@startsection {subparagraph}{4}{\parindent}
  {1.5ex plus 1ex minus .2ex}{-1em}{\normalsize\bf}}

